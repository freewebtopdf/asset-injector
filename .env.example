# Asset Injector Microservice Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8080
READ_TIMEOUT=5s
WRITE_TIMEOUT=5s
BODY_LIMIT=1048576

# Cache Configuration
CACHE_MAX_SIZE=10000
CACHE_TTL=1h

# Storage Configuration
DATA_DIR=./data

# Security Configuration
CORS_ORIGINS=*
ENABLE_HTTPS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Community/Pack Configuration
RULES_DIR=./rules
LOCAL_RULES_DIR=./rules/local
COMMUNITY_RULES_DIR=./rules/community
OVERRIDE_RULES_DIR=./rules/overrides
COMMUNITY_REPO_URL=https://api.github.com/repos/asset-injector/community-rules
COMMUNITY_REPO_TIMEOUT=30s
AUTO_UPDATE_PACKS=false
WATCH_RULE_FILES=false

# Singles Sync Configuration (individual contributed rules)
SINGLES_SYNC_ENABLED=false
SINGLES_SYNC_INTERVAL=5m
